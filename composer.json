{
    "name": "ideal-creative-lab/laravel-tachyon",
    "description": "Laravel Tachyon",
    "keywords": [
        "laravel",
        "page speed",
        "minify",
        "optimize",
        "html"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Dominik Lokkhart",
            "email": "lokkhart@yard77.dev"
        },
        {
            "name": "Renato Marinho",
            "email": "renato.marinho@s2move.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^9.0 || ^10.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "orchestra/testbench": "^6.0 || ^7.0",
        "squizlabs/php_codesniffer": "^3.7",
        "mockery/mockery": "^1.6",
        "laravel/pint": "^1.10",
        "pestphp/pest": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "IdealCreativeLab\\LaravelTachyon\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IdealCreativeLab\\LaravelTachyon\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "check-style": "./vendor/bin/pint --test src tests",
        "fix-style": "./vendor/bin/pint src tests"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "laravel": {
            "providers": [
                "IdealCreativeLab\\LaravelTachyon\\ServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
